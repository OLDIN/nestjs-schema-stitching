{
  "name": "tickets-back-end",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start:hmr": "node dist/server",
    "start": "export NODE_ENV=development && concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^6.3.1",
    "@nestjs/core": "^6.3.1",
    "@nestjs/graphql": "^6.2.4",
    "@nestjs/platform-express": "^6.3.1",
    "@nestjs/typeorm": "^6.1.2",
    "apollo-link": "^1.2.11",
    "apollo-link-context": "^1.0.17",
    "apollo-link-http": "^1.5.14",
    "apollo-server-express": "^2.6.2",
    "apollo-utilities": "^1.3.2",
    "bcrypt": "^3.0.6",
    "class-transformer": "^0.2.3",
    "dotenv": "^8.0.0",
    "fs": "^0.0.2",
    "glob": "^7.1.4",
    "graphql": "^14.3.1",
    "graphql-tools": "^4.0.4",
    "helmet": "^3.18.0",
    "joi": "^14.3.1",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "nestjs-config": "^1.4.1",
    "node-fetch": "^2.6.0",
    "pg": "^7.11.0",
    "redis": "^3.1.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "rxjs": "^6.5.2",
    "subscriptions-transport-ws": "^0.9.16",
    "ts-loader": "^6.0.2",
    "typeorm": "^0.2.18",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.3",
    "webpack-node-externals": "^1.7.2",
    "ws": "^7.0.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.3.1",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.13",
    "@types/joi": "^14.3.3",
    "@types/lodash": "^4.14.134",
    "@types/node": "^12.0.7",
    "@types/supertest": "^2.0.7",
    "concurrently": "^4.1.0",
    "jest": "^23.6.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.2.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.17.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "3.5.1",
    "wait-on": "^3.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
